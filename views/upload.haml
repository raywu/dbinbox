.row
  .domo-mouth.col-xs-8.col-sm-8.col-md-8.col-lg-8.col-lg-offset-2.col-xs-offset-2.col-sm-offset-2.col-md-offset-2
    %ul.triangle-down
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2
    .row
      .instructions.text-center.col-xs-12.col-sm-12.col-md-12.col-lg-12
        %span Drag and drop photos. Keep #{@user.username}'s Domo happy :-)

      #dropzone.text-center.col-xs-12.col-sm-12.col-md-12.col-lg-12
        %span RAWRRRRR! DOMO HAPPY!

      %form.domo-form-padding-zero.col-xs-12.col-sm-12.col-md-12.col-lg-12{action: @action, multipart: true, id: 'upload'}
        %table.filelist
          %tbody.files
        %span#upload_button.btn.btn-primary.fileinput-button{:style => ""}
          %i.icon-plus.icon-white
          %span Choose files
          %input{:multiple => "", :name => "files[]", :type => "file"}
        .fileupload-progress.fade
          .progress.progress-success.progress-striped.active
          .bar{:style => "width:0%;"}
          .progress-extended &nbsp;
        .fileupload-loading

    %ul.triangle-up 
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2

