.domo.span12
  .domo-forehead
  %span.domo-eyes.span1.offset1
  %span.domo-eyes.span1.offset10
/ .domo.span12
.domo.span8.offset2
  .domo-mouth.span8
    %ul.triangle-down
      %li.span2
      %li.span2
      %li.span2
      %li.span2
    .domo-content.row
      .instructions.span8
        %span Rwarr! Drag and drop photos to keep #{@user.username}'s Domo Kun happy :-)
      / .instructions
      #dropzone.span8
        %span RAWRRRRR! DOMO KUN HAPPY!
      / #dropzone.span8
      %form.span8{action: @action, multipart: true, id: 'upload'}
        %table.filelist
          %tbody.files
        %span#upload_button.btn.btn-primary.fileinput-button{:style => "margin: 0 auto;"}
          %i.icon-plus.icon-white
          %span Choose files
          %input{:multiple => "", :name => "files[]", :type => "file"}
        .fileupload-progress.fade
          .progress.progress-success.progress-striped.active
          .bar{:style => "width:0%;"}
          .progress-extended &nbsp;
        .fileupload-loading
    / domo-content
    %ul.triangle-up
      %li.span2
      %li.span2
      %li.span2
      %li.span2
  / .domo-mouth.span8
/ domo.span8.offset2
.domo.span2.offset10.row
  %span#upload_button.btn.btn-primary.fileinput-button{:style => "clear:both;"}
    %i.icon-plus.icon-white
    %a{:href => "/#{@user.username}", :style => "color:white;"} Reload, Ka-ching!
/ span2.offset10