.domo.col-xs-12.col-sm-12.col-md-12.col-lg-12
  .domo-forehead
  %span.domo-eyes.col-xs-1.col-xs-offset-1.col-sm-1.col-sm-offset-1.col-md-1.col-md-offset-1.col-lg-1.col-lg-offset-1
  %span.domo-eyes.col-xs-1.col-xs-offset-10.col-sm-1.col-sm-offset-10.col-md-1.col-md-offset-10.col-lg-1.col-lg-offset-10

.domo.col-xs-8.col-xs-offset-2.col-sm-8.col-sm-offset-2.col-md-8.col-md-offset-2.col-lg-8.col-lg-offset-2
  .domo-mouth.col-xs-8.col-sm-8.col-md-8.col-lg-8
    %ul.triangle-down
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2
    .domo-content.row
      .instructions.col-xs-8.col-sm-8.col-md-8.col-lg-8
        %span.span6.offset1 Drag and drop photos. Keep #{@user.username}'s Domo happy :-)
      / .instructions
      #dropzone.span8
        %span.span6.offset1 RAWRRRRR! DOMO HAPPY!
      / #dropzone.span8
      %form.span8{action: @action, multipart: true, id: 'upload'}
        %table.filelist.span6
          %tbody.files
        %span#upload_button.btn.btn-primary.fileinput-button{:style => "margin: 0 auto;"}
          %i.icon-plus.icon-white
          %span Choose files
          %input{:multiple => "", :name => "files[]", :type => "file"}
        .fileupload-progress.fade
          .progress.progress-success.progress-striped.active
          .bar{:style => "width:0%;"}
          .progress-extended &nbsp;
        .fileupload-loading
    / domo-content
    %ul.triangle-up
      %li.span2
      %li.span2
      %li.span2
      %li.span2
  / .domo-mouth.span8
/ domo.span8.offset2
.domo.span2.offset10.row
  %span#upload_button.btn.btn-primary.fileinput-button{:style => "clear:both;"}
    %i.icon-plus.icon-white
    %a{:href => "/#{@user.username}", :style => "color:white;"} Reload, Ka-ching!
/ span2.offset10