.domo-upper-face.row
  .domo-eyes.col-xs-1.col-sm-1.col-md-1.col-lg-1.col-lg-offset-1.col-xs-offset-1.col-sm-offset-1.col-md-offset-1
  .domo-eyes.col-xs-1.col-sm-1.col-md-1.col-lg-1.col-lg-offset-8.col-xs-offset-8.col-sm-offset-8.col-md-offset-8

.row
  .domo-mouth.col-xs-8.col-sm-8.col-md-8.col-lg-8.col-lg-offset-2.col-xs-offset-2.col-sm-offset-2.col-md-offset-2
    %ul.triangle-down
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2
    .row
      .instructions.text-center.col-xs-12.col-sm-12.col-md-12.col-lg-12
        %span Drag and drop photos. Keep #{@user.username}'s Domo happy :-)

      #dropzone.text-center.col-xs-12.col-sm-12.col-md-12.col-lg-12
        %span RAWRRRRR! DOMO HAPPY!

      %form.domo-form-padding-zero.col-xs-12.col-sm-12.col-md-12.col-lg-12{action: @action, multipart: true, id: 'upload'}
        %table.filelist.col-xs-8.col-sm-8.col-md-8.col-lg-8.col-xs-offset-2.col-sm-offset-2.col-md-offset-2.col-lg-offset-2
          %tbody.files
        %span#upload_button.btn.btn-primary.fileinput-button{:style => ""}
          %i.icon-plus.icon-white
          %span Choose files
          %input{:multiple => "", :name => "files[]", :type => "file"}
        .fileupload-progress.fade
          .progress.progress-success.progress-striped.active.col-xs-8.col-sm-8.col-md-8.col-lg-8.col-xs-offset-2.col-sm-offset-2.col-md-offset-2.col-lg-offset-2
          .bar{:style => "width:0%;"}
          .progress-extended &nbsp;
        .fileupload-loading

    %ul.triangle-up 
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2
      %li.col-xs-2.col-sm-2.col-md-2.col-lg-2
	
%nav.navbar.navbar-default.navbar-fixed-bottom.navbar-domo{role: "navigation"}
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: "#", style: "color: white;"} Domo Photo Recovery!
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li
          %button.btn.btn-danger.navbar-btn{type: "button"}
            %a{href: "/#{@user.username}", style: "color: white;"} Reload, Ka-ching!
    / /.navbar-collapse
  / /.container-fluid